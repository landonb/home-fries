#!/bin/bash
#  vim:tw=0:ts=2:sw=2:et:norl:ft=bash

# Project Page: https://github.com/landonb/home-fries
# Author: Landon Bouma (landonb &#x40; retrosoft &#x2E; com)

# Rebases 'develop' (or a named branch)
# atop 'upstream/develop' (or a named remote/branch).
git-bump () {
  local local_br="${1:-develop}"
  local remote_up="${2:-upstream}"
  local upstream_br="${3:-${1}}"
  local remote_or="${4:-origin}"
  git checkout "${local_br}"
  git fetch "${remote_up}"
  git rebase "${remote_up}/${upstream_br}"
  # 2020-02-09: Really push? Let's not.
  #   # git fetch "${remote_or}"
  #   git push "${remote_or}"
}

# ***

main () {
  set -e
  git-bump "${@}"
}

main "$@"

