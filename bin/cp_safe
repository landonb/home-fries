function cp_safe () {
  if [ "$1" = "-f" ]; then
    command cp "$@"
  else
    command cp -i "$@"
  fi
}

# @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ #

if [ "$0" = "${BASH_SOURCE[0]}" ]; then
  cp_safe "$@"
fi

